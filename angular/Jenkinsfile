pipeline {
    agent any

    environment {
        // Set environment variables if needed
        NODEJS_HOME = '/usr/local/bin/node'
        PATH = "${NODEJS_HOME}/bin:${PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system (e.g., Git)
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js and npm
                script {
                    sh 'curl -sL https://deb.nodesource.com/setup_14.x | bash -'
                    sh 'apt-get install -y nodejs'
                }

                // Install Angular CLI and project dependencies
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                // Build the Angular application
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                // Run tests if applicable
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your Angular application (e.g., copy files to a web server)
                // You may need additional steps based on your deployment strategy
            }
        }
    }

    post {
        success {
            // Add post-build actions if needed
        }
        failure {
            // Add actions to be executed if the build fails
        }
    }
}

